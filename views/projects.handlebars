<div id="main">
    <div class="container">
        <h1>List of my projects</h1>

        {{#if isAdmin}}
            <div class="new-proj"> 
                <a href="/projects/new"> New project </a>
            </div>
        {{/if}}

        {{#if dbError}}
            <div>
                Sorry, there was an error with the database: <br />
                {{theError}}
            </div>
        {{else}}
            {{#each projects}}
                <div class="project">
                    <h2>{{pname}}</h2>
                    <a href="/projects/{{pid}}">View Details</a>                
                    <img src="{{pimgURL}}" alt="{{pname}}" class="project-image"> 
                    {{#if ../isAdmin}}
                        <div>
                            <a href="/projects/update/{{pid}}"> Modify </a> - <a href="/projects/delete/{{pid}}"> Delete </a>
                        </div>
                    {{/if}}
                </div>
            {{/each}}
        {{/if}}
    </div>
</div>
